  "html": "<!DOCTYPE html>\n<html>\n<head>\n    <style>\n        * {\n            margin: 0;\n            padding: 0;\n            box-sizing: border-box;\n        }\n\n        .pyramid-container {\n            width: 100%;\n            height: 100%;\n            max-width: 1800px;\n            max-height: 720px;\n            display: flex;\n            flex-direction: column;\n            padding: 25px 60px;\n            font-family: Arial, sans-serif;\n            gap: 20px;  /* Increased gap between pyramid and details box */\n        }\n\n        .pyramid-wrapper {\n            width: 100%;\n            flex: 0 0 65%;  /* Top section takes 65% of height (less space for details) */\n            display: flex;\n            align-items: center;\n            gap: 60px;\n        }\n\n        .horizontal-line {\n            width: 100%;\n            height: 2px;\n            background: #cbd5e1;  /* Gray line */\n        }\n\n        .details-box {\n            width: 100%;\n            background: transparent;  /* Transparent background */\n            border-radius: 8px;\n            padding: 36px 0;\n            display: flex;\n            flex-direction: column;\n            justify-content: flex-start;\n        }\n\n        .details-title {\n            font-size: 18px;\n            font-weight: 700;\n            color: #1e293b;\n            margin-bottom: 10px;\n            padding: 0 40px;\n        }\n\n        .details-text {\n            font-size: 14px;\n            line-height: 1.6;\n            color: #475569;\n            padding: 0 40px;\n        }\n\n        .pyramid-visual {\n            flex: 0 0 45%;  /* 45% of width for pyramid visual */\n            height: 60%;    /* 60% of pyramid-wrapper height for 4-stage */\n            display: flex;\n            flex-direction: column;\n            justify-content: center;\n            align-items: center;\n            gap: 6.5px;     /* Gap reduced by half (was 13px) */\n        }\n\n        .pyramid-level {\n            width: 100%;\n            position: relative;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n        }\n\n        .pyramid-shape {\n            /* Height: h = 54px for trapezoids, h_triangle = 81px for triangle */\n            height: 54px;\n            position: relative;\n            display: flex;\n            flex-direction: column;\n            align-items: center;\n            justify-content: center;\n            gap: 6px;\n            transition: all 0.3s ease;\n        }\n\n        .pyramid-level:hover .pyramid-shape {\n            filter: brightness(1.1);\n            transform: scale(1.02);\n        }\n\n        /* MATHEMATICALLY CORRECT TAPER WITH TRIANGLE CAP (2\u00d7 STEEPER):\n           H_total = 281px, W_total = 100% (base), N = 4\n           R_g = 0.25, R_t = 1.5\n           h = 54px, g = 13px, h_triangle = 81px\n           C = 0.356 (100% / 281px - proper steep pyramid)\n           \u0394W_trapezoid = 19.2%, \u0394W_gap = 4.63%\n        */\n\n        /* Level 1 (Bottom Trapezoid): B1=100%, T1=80.8% */\n        .pyramid-level:nth-child(4) .pyramid-shape {\n            width: 100%;\n            clip-path: polygon(9.6% 0%, 90.4% 0%, 100% 100%, 0% 100%);\n        }\n\n        /* Level 2 (Trapezoid): B2=76.17%, T2=56.97% */\n        .pyramid-level:nth-child(3) .pyramid-shape {\n            width: 76.17%;\n            clip-path: polygon(12.6% 0%, 87.4% 0%, 100% 100%, 0% 100%);\n        }\n\n        /* Level 3 (Trapezoid): B3=52.34%, T3=33.14% */\n        .pyramid-level:nth-child(2) .pyramid-shape {\n            width: 52.34%;\n            clip-path: polygon(18.4% 0%, 81.6% 0%, 100% 100%, 0% 100%);\n        }\n\n        /* Level 4 (Top TRIANGLE): B4=28.51%, T4=0% (point), Height=81px (1.5x) */\n        .pyramid-level:nth-child(1) .pyramid-shape {\n            width: 28.51%;\n            height: 81px;  /* Triangle is 1.5\u00d7 regular trapezoid height */\n            clip-path: polygon(50% 0%, 100% 100%, 0% 100%);  /* Perfect triangle */\n        }\n\n        /* MULTI-COLOR palette */\n        .level-4 .pyramid-shape { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }  /* Amber */\n        .level-3 .pyramid-shape { background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); }  /* Purple */\n        .level-2 .pyramid-shape { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); }  /* Blue */\n        .level-1 .pyramid-shape { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }  /* Green */\n\n        .level-number {\n            color: white;\n            font-size: 48px;\n            font-weight: 900;\n            margin-top: 0;\n        }\n\n        .level-label {\n            color: white;\n            font-size: 22px;\n            font-weight: 600;\n            text-align: center;\n            padding: 0 20px;\n            margin-top: auto;\n        }\n\n        .connector-line {\n            position: absolute;\n            right: -35px;\n            top: 50%;\n            width: 30px;\n            height: 2px;\n            background: #cbd5e1;\n            transform: translateY(-50%);\n        }\n\n        .descriptions-column {\n            flex: 0 0 41%;\n            height: 100%;\n            display: flex;\n            flex-direction: column;\n            justify-content: center;\n            gap: 6.5px;  /* Match pyramid gap */\n        }\n\n        .description-item {\n            display: flex;\n            align-items: center;\n            gap: 24px;\n            height: 54px;  /* Match trapezoid height for alignment */\n        }\n\n        .description-number {\n            font-size: 72px;\n            font-weight: 900;\n            min-width: 85px;\n            text-align: center;\n        }\n\n        /* MATCH description number colors to NUMBER VALUE (not position) */\n        /* Top to bottom: 4(orange), 3(purple), 2(blue), 1(green) */\n        /* Higher specificity to override viewer CSS */\n        .pyramid-container .descriptions-column .description-item:nth-child(1) > .description-number { color: #f59e0b !important; opacity: 1.0; }  /* 4 - Orange */\n        .pyramid-container .descriptions-column .description-item:nth-child(2) > .description-number { color: #8b5cf6 !important; opacity: 1.0; }  /* 3 - Purple */\n        .pyramid-container .descriptions-column .description-item:nth-child(3) > .description-number { color: #3b82f6 !important; opacity: 1.0; }  /* 2 - Blue */\n        .pyramid-container .descriptions-column .description-item:nth-child(4) > .description-number { color: #10b981 !important; opacity: 1.0; }  /* 1 - Green */\n\n        .description-text {\n            flex: 1;\n            font-size: 16px;\n            line-height: 1.6;\n            color: #475569;\n        }\n    </style>\n</head>\n<body>\n    <div class=\"pyramid-container\">\n        <div class=\"pyramid-wrapper\">\n            <!-- Pyramid Visual (Left Side) - TOP TO BOTTOM -->\n            <div class=\"pyramid-visual\">\n                <!-- Level 4 (Top - Narrowest) -->\n                <div class=\"pyramid-level level-4\">\n                    <div class=\"pyramid-shape\">\n                        <div class=\"level-number\">4</div>\n                        <div class=\"level-label\">Drive Vision</div>\n                        <div class=\"connector-line\"></div>\n                    </div>\n                </div>\n\n                <!-- Level 3 -->\n                <div class=\"pyramid-level level-3\">\n                    <div class=\"pyramid-shape\">\n                        <div class=\"level-number\">3</div>\n                        <div class=\"level-label\">Manage Projects Well</div>\n                        <div class=\"connector-line\"></div>\n                    </div>\n                </div>\n\n                <!-- Level 2 -->\n                <div class=\"pyramid-level level-2\">\n                    <div class=\"pyramid-shape\">\n                       
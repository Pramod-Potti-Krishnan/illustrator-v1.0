  "html": "<!DOCTYPE html>\n<html>\n<head>\n    <style>\n        * {\n            margin: 0;\n            padding: 0;\n            box-sizing: border-box;\n        }\n\n        .pyramid-container {\n            width: 100%;\n            height: 100%;\n            max-width: 1800px;\n            max-height: 720px;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n            padding: 30px 50px;\n            font-family: Arial, sans-serif;\n        }\n\n        .pyramid-wrapper {\n            width: 100%;\n            height: 100%;\n            display: flex;\n            align-items: center;\n            gap: 50px;\n        }\n\n        .pyramid-visual {\n            flex: 0 0 45%;  /* 45% of width for pyramid visual */\n            height: 80%;    /* 80% of container height */\n            display: flex;\n            flex-direction: column;\n            justify-content: center;\n            align-items: center;\n            gap: 11px;      /* Gap reduced by half (was 22px) */\n        }\n\n        .pyramid-level {\n            width: 100%;\n            position: relative;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n        }\n\n        .pyramid-shape {\n            /* Height: h = 89px for trapezoids, h_triangle = 133px for triangle */\n            height: 89px;\n            position: relative;\n            display: flex;\n            flex-direction: column;\n            align-items: center;\n            justify-content: center;\n            gap: 8px;\n            transition: all 0.3s ease;\n        }\n\n        .pyramid-level:hover .pyramid-shape {\n            filter: brightness(1.1);\n            transform: scale(1.02);\n        }\n\n        /* MATHEMATICALLY CORRECT TAPER WITH TRIANGLE CAP (2\u00d7 STEEPER):\n           H_total = 576px, W_total = 100% (base), N = 5\n           R_g = 0.25, R_t = 1.5\n           h = 89px, g = 22px, h_triangle = 133px\n           C = 0.174 (100% / 576px - proper steep pyramid)\n           \u0394W_trapezoid = 15.5%, \u0394W_gap = 3.83%\n        */\n\n        /* Level 1 (Bottom Trapezoid): B1=100%, T1=84.5% */\n        .pyramid-level:nth-child(5) .pyramid-shape {\n            width: 100%;\n            clip-path: polygon(7.75% 0%, 92.25% 0%, 100% 100%, 0% 100%);\n        }\n\n        /* Level 2 (Trapezoid): B2=80.67%, T2=65.17% */\n        .pyramid-level:nth-child(4) .pyramid-shape {\n            width: 80.67%;\n            clip-path: polygon(9.6% 0%, 90.4% 0%, 100% 100%, 0% 100%);\n        }\n\n        /* Level 3 (Trapezoid): B3=61.34%, T3=45.84% */\n        .pyramid-level:nth-child(3) .pyramid-shape {\n            width: 61.34%;\n            clip-path: polygon(12.65% 0%, 87.35% 0%, 100% 100%, 0% 100%);\n        }\n\n        /* Level 4 (Trapezoid): B4=42.01%, T4=26.51% */\n        .pyramid-level:nth-child(2) .pyramid-shape {\n            width: 42.01%;\n            clip-path: polygon(18.45% 0%, 81.55% 0%, 100% 100%, 0% 100%);\n        }\n\n        /* Level 5 (Top TRIANGLE): B5=22.68%, T5=0% (point), Height=133px (1.5x) */\n        .pyramid-level:nth-child(1) .pyramid-shape {\n            width: 22.68%;\n            height: 133px;  /* Triangle is 1.5\u00d7 regular trapezoid height */\n            clip-path: polygon(50% 0%, 100% 100%, 0% 100%);  /* Perfect triangle */\n        }\n\n        /* MULTI-COLOR palette for different sections */\n        .level-5 .pyramid-shape { background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); }  /* Pink */\n        .level-4 .pyramid-shape { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }  /* Amber */\n        .level-3 .pyramid-shape { background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); }  /* Purple */\n        .level-2 .pyramid-shape { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); }  /* Blue */\n        .level-1 .pyramid-shape { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }  /* Green */\n\n        .level-number {\n            color: white;\n            font-size: 40px;\n            font-weight: 900;\n            margin-top: 0;  /* Aligned to top with padding */\n        }\n\n        .level-label {\n            color: white;\n            font-size: 18px;\n            font-weight: 600;\n            text-align: center;\n            padding: 0 20px;\n            margin-top: auto;  /* Push to bottom with padding */\n        }\n\n        .connector-line {\n            position: absolute;\n            right: -30px;\n            top: 50%;\n            width: 25px;\n            height: 2px;\n            background: #cbd5e1;\n            transform: translateY(-50%);\n        }\n\n        .descriptions-column {\n            flex: 0 0 53%;\n            height: 100%;\n            display: flex;\n            flex-direction: column;\n            justify-content: center;\n            gap: 11px;  /* Match pyramid gap */\n        }\n\n        .description-item {\n            display: flex;\n            align-items: center;\n            gap: 20px;\n            height: 89px;  /* Match trapezoid height for alignment */\n        }\n\n        .description-number {\n            font-size: 64px;\n            font-weight: 900;\n            min-width: 75px;\n            text-align: center;\n        }\n\n        /* MATCH description number colors to NUMBER VALUE (not position) */\n        /* Top to bottom: 5(pink), 4(orange), 3(purple), 2(blue), 1(green) */\n        /* Higher specificity to override viewer CSS */\n        .pyramid-container .descriptions-column .description-item:nth-child(1) > .description-number { color: #ec4899 !important; opacity: 1.0; }  /* 5 - Pink */\n        .pyramid-container .descriptions-column .description-item:nth-child(2) > .description-number { color: #f59e0b !important; opacity: 1.0; }  /* 4 - Orange */\n        .pyramid-container .descriptions-column .description-item:nth-child(3) > .description-number { color: #8b5cf6 !important; opacity: 1.0